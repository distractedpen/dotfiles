# MacOS Specific .zshrc configuration
export PATH=$HOME/bin:/usr/local/bin:$PATH
export PATH=/usr/local/share/dotnet:$HOME/.dotnet/tools:$PATH
export PATH=$HOME/.cargo/bin:$PATH
export PATH=$HOME/bin/flutter/bin:$PATH
export PATH=$HOME/bin/PurpleExplorer_osx-arm64:$PATH
export PATH=$HOME/bin/zig-macos-aarch64-0.14.0:$PATH
export PATH=/opt/homebrew/opt/libpq/bin:$PATH


# setup homebrew
eval "$(/opt/homebrew/bin/brew shellenv)" 
export DYLD_LIBRARY_PATH="$(brew --prefix)/lib:$DYLD_LIBRARY_PATH"


# setup pyenv
export PYENV_ROOT="$HOME/.pyenv"
eval "$(pyenv init -)"

# setup jenv
export JENV_ROOT="$HOME/.jenv"
export PATH=$JENV_ROOT/bin:$PATH
eval "$(jenv init -)"

# Compilation flags
export ARCHFLAGS="-arch arm64"

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# Motivation every day
curl -s https://qapi.vercel.app/api/random | jq '"\(.quote) -\(.author)"' | cowsay
